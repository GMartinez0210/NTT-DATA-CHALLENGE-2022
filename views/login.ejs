<%- include('partials/header') -%>

    <div class="container container-login">
        <main class="form-container">
            <form action="/login" method="post" class="form-login text-center">
                <img class="mb-4 logo-login" src="/images/DocBot.png" alt="$Logo" width="72" height="57">
                
                <div class="text-start mb-3">
                    <label for="loginEmail" class="form-label label-login">Email</label>
                    <input name="username" type="email" class="form-control input-login" id="loginEmail" placeholder="example@gmail.com">
                </div>

                <div class="text-start mb-3">
                    <label for="loginPassword" class="form-label label-login">Password</label>
                    <input name="password" type="password" class="form-control input-login" id="loginPassword" placeholder="**********">
                </div>

                <button class="mx-auto mt-5 w-50 btn btn-lg btn-login" type="submit">Ingresar</button>

                <div class="mt-3">
                    <p>¿No tienes cuenta? <a href="">REGISTRATE</a></p>
                </div>

                <div class="col mt-5">
                    <a class="px-3 btn btn-md btn-google btn-auth" href="/auth/google" role="button">
                        <img src="/images/Google.png" alt="">
                        <span>Ingresa con Google</span>
                    </a>
                </div>
                <div class="col mt-3">
                    <a class="px-3 btn btn-md btn-invitado btn-auth" href="/invitado" role="button">
                        <i class="fa-solid fa-user"></i>
                        <span>Ingresa como Invitado</span>
                    </a>
                </div>

            <p class="mt-5 mb-3">© World Fish - 2022</p>
            </form>
        </main>
    </div>

<%- include('partials/footer') -%>